<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewTheme" />

    <style name="TextViewTheme.Small" parent="TextViewTheme">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/color_222222</item>
    </style>

    <style name="TextViewTheme.Regular" parent="TextViewTheme">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/color_222222</item>
    </style>

    <style name="TextViewTheme.Medium" parent="TextViewTheme">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/color_222222</item>
    </style>

    <style name="TextViewTheme.Medium.Bold" parent="TextViewTheme.Medium">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>